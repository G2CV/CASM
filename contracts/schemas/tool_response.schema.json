{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["ok", "blocked_reason", "findings", "evidence", "metrics", "tool_name", "tool_version"],
  "properties": {
    "ok": { "type": "boolean" },
    "blocked_reason": { "type": ["string", "null"] },
    "tool_name": { "type": "string" },
    "tool_version": { "type": "string" },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "title",
          "severity",
          "target",
          "evidence_ids",
          "summary",
          "timestamp"
        ],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "severity": { "type": "string" },
          "target": { "type": "string" },
          "evidence_ids": { "type": "array", "items": { "type": "string" } },
          "summary": { "type": "string" },
          "timestamp": { "type": "string" }
        }
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "timestamp",
          "type",
          "target",
          "data",
          "engagement_id",
          "run_id",
          "tool_name",
          "tool_version",
          "status",
          "duration_ms"
        ],
        "properties": {
          "id": { "type": "string" },
          "timestamp": { "type": "string" },
          "type": { "type": "string" },
          "target": { "type": "string" },
          "data": { "type": "object" },
          "engagement_id": { "type": "string" },
          "run_id": { "type": "string" },
          "tool_name": { "type": "string" },
          "tool_version": { "type": "string" },
          "status": { "type": "string", "enum": ["success", "blocked", "error", "timeout"] },
          "duration_ms": { "type": "integer", "minimum": 0 }
        }
      }
    },
    "metrics": { "type": "object" },
    "raw_redacted": { "type": ["object", "null"] }
  }
}
